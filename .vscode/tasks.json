{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flutter App (debug)",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build Android APK",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "--release"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean and Get Dependencies",
      "type": "shell",
      "command": "flutter clean && flutter pub get",
      "problemMatcher": []
    }
  ]
}
